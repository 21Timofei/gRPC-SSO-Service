version: "3.8"
services:
  db:
    image: postgres:13
    environment:
      POSTGRES_USER: yourusername
      POSTGRES_PASSWORD: yourpassword
      POSTGRES_DB: yourdbname
    ports:
      - "5432:5432"
  server:
    build: .
    environment:
      DB_HOST: db
      DB_PORT: "5432"
      DB_USER: yourusername
      DB_PASSWORD: yourpassword
      DB_NAME: yourdbname
    ports:
      - "50051:50051"
    depends_on:
      - db